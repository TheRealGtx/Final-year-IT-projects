@inherits LayoutComponentBase
@using System.Text.RegularExpressions;
@inject NavigationManager NavigationManager;
@using AltriComponenti

<stazioneMeteoBlazor.AltriComponenti.Intestazione/>
<div class="container">
    <div class="row">
        <ErrorBoundary>
            <ChildContent>
                <main class="col">@Body</main>
            </ChildContent>
            <ErrorContent Context="ex">
                <stazioneMeteoBlazor.AltriComponenti.FinestraModaleErrore Titolo="Si è verificato un errore.">
                    <div class="row">
                        <p>@ex.Message</p>
                    </div>
                </stazioneMeteoBlazor.AltriComponenti.FinestraModaleErrore>
            </ErrorContent>
        </ErrorBoundary>
        <div class="col-sm-3 col-6">
            <stazioneMeteoBlazor.AltriComponenti.LinkCorrelati />
        </div>
    </div>
    <div class="row">
        <stazioneMeteoBlazor.AltriComponenti.Footer/>
    </div>
</div>