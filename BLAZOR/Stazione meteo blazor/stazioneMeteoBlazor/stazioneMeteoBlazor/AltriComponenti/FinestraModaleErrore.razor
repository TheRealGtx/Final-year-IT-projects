@inject NavigationManager NavigationManager
@using stazioneMeteoBlazor.Pages

<div class="modal show" tabindex="-1" role="dialog" style="display:block; overflow-y: auto;">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@Titolo</h5>
                <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close" @onclick="Ricarica"></button>
            </div>
            <div class="modal-body">
                @ChildContent
                <button class="btn btn-primary" @onclick="() => Ricarica()"> Chiudi </button>
            </div>
        </div>
    </div>
</div>
<div class="modal-backdrop fade show"></div>

@code {
    [Parameter]
    public string Titolo { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }
}