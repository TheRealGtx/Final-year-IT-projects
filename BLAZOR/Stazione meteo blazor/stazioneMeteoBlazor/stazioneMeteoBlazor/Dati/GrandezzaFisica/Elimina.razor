@page "/GrandezzaFisica/elimina/{id}"
@using stazioneMeteoBlazor.Pages
@using System.ComponentModel.DataAnnotations
@inject GrandezzaFisicaQuery grandezzaFisicaQuery
@inject NavigationManager NavigationManager
@using stazioneMeteoBlazor.AltriComponenti

<h2>Elimina grandezza fisica</h2>

<dl class="row">
    <dt class="col-sm-2">Grandezza</dt>
    <dd class="col-sm-10">@_grandezza.grandezzaFisica</dd>
    <dt class="col-sm-2">Simbolo</dt>
    <dd class="col-sm-10">@_grandezza.simbolo</dd>
    <dt class="col-sm-2">Simbolo adottatto</dt>
    <dd class="col-sm-10">@_grandezza.simboloAdottato</dd>
    <dt class="col-sm-2">Note</dt>
    <dd class="col-sm-10">@_grandezza.note</dd>
</dl>

<button class="btn btn-danger" @onclick="EliminaRecord">Elimina</button>
<br />

<a class="btn btn-primary" href="/GrandezzaFisica" role="button">Torna alle grandezze</a>

@if (finestra)
{
    <FinestraDati Titolo="Elimina" Tabella="GrandezzaFisica" />
}

@code
{
    [Parameter]
    public string id { get; set; }
}