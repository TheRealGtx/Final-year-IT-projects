@page "/GrandezzaFisica/dettagli/{id}"
@using stazioneMeteoBlazor.Pages
@inject GrandezzaFisicaQuery grandezzaFisicaQuery

<h2>Dettagli della grandezza selezionata</h2>

@{
    GrandezzaFisica grandezza = grandezzaFisicaQuery.ottieneGrandezzaById(Id);

    <dl class="row">
        <dt class="col-sm-2">Grandezza fisica:</dt>
        <dd class="col-sm-10">@grandezza.grandezzaFisica</dd>
        <dt class="col-sm-2">Simbolo:</dt>
        <dd class="col-sm-10">@grandezza.simbolo</dd>
        <dt class="col-sm-2">Simbolo adottato:</dt>
        <dd class="col-sm-10">@grandezza.simboloAdottato</dd>
        <dt class="col-sm-2">Note:</dt>
        <dd class="col-sm-10">@grandezza.note</dd>
    </dl>
}

<a class="btn btn-primary" href="/GrandezzaFisica" role="button">Torna alle grandezze fisiche</a>

@code {
    [Parameter]
    public string Id { get; set; }
}