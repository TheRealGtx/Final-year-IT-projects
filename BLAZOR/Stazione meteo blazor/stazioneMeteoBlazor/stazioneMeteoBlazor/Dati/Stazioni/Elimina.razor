@page "/Stazioni/elimina/{id}"
@using stazioneMeteoBlazor.Pages
@using System.ComponentModel.DataAnnotations
@inject StazioniQuery stazioniQuery
@inject NavigationManager NavigationManager
@using stazioneMeteoBlazor.AltriComponenti

<h2>Elimina stazioni</h2>

<dl class="row">
    <dt class="col-sm-2">Nome</dt>
    <dd class="col-sm-10">@_stazione.Id</dd>
    <dt class="col-sm-2">Indirizzo</dt>
    <dd class="col-sm-10">@_stazione.Indirizzo</dd>
    <dt class="col-sm-2">Ip</dt>
    <dd class="col-sm-10">@_stazione.Ip</dd>
</dl>

<button class="btn btn-danger" @onclick="EliminaRecord">Elimina</button>
<br />

@if (finestra)
{
    <FinestraDati Titolo="Elimina" Tabella="Stazioni" />
}

<a class="btn btn-primary" href="/Stazioni" role="button">Torna alle stazioni</a>

@code
{
    [Parameter]
    public string id { get; set; }
}